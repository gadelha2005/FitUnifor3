<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="550dp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        app:cardBackgroundColor="#D9D9D9"
        app:cardCornerRadius="20dp">

        <ImageView
            android:id="@+id/icon_close"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/icon_close"
            tools:srcCompat="@drawable/icon_close"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView35"
                android:layout_width="164dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-black"
                android:text="Gestão de Aulas"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView36"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Informe os detalhes da aula coletiva"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textView37"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="Nome da Aula"
                android:textColor="#000000" />

            <androidx.cardview.widget.CardView
                android:layout_width="306dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                app:cardBackgroundColor="#F7F7F7">

                <EditText
                    android:id="@+id/edit_text_nome_aula"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:backgroundTint="#F7F7F7"
                    android:ems="10"
                    android:inputType="text"
                    android:textColor="#000000"
                    android:textSize="15sp" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView38"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="Professor"
                android:textColor="#000000" />

            <androidx.cardview.widget.CardView
                android:layout_width="306dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                app:cardBackgroundColor="#F7F7F7">

                <EditText
                    android:id="@+id/edit_text_professor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0dp"
                    android:backgroundTint="#F7F7F7"
                    android:ems="10"
                    android:inputType="text"
                    android:textColor="#000000"
                    android:textSize="15sp" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView39"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="Dia da Semana"
                android:textColor="#000000" />

            <androidx.cardview.widget.CardView
                android:layout_width="306dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                app:cardBackgroundColor="#F7F7F7">


                <Spinner
                    android:id="@+id/spinner_dia_semana"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView40"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="Horário"
                android:textColor="#000000" />

            <androidx.cardview.widget.CardView
                android:layout_width="306dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                app:cardBackgroundColor="#F7F7F7">

                <EditText
                    android:id="@+id/edit_text_horario"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0dp"
                    android:backgroundTint="#F7F7F7"
                    android:clickable="true"
                    android:ems="10"
                    android:focusable="false"
                    android:inputType="text"
                    android:textColor="#000000"
                    android:textSize="15sp" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView41"
                android:layout_width="134dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="Máximo de Alunos"
                android:textColor="#000000" />

            <androidx.cardview.widget.CardView
                android:layout_width="306dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                app:cardBackgroundColor="#F7F7F7">

                <EditText
                    android:id="@+id/edit_maximo_alunos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:backgroundTint="#F7F7F7"
                    android:inputType="number"
                    android:textColor="#000000"
                    android:textSize="15sp" />
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/button_salvar_aula"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="Salvar"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"/>

            <TextView
                android:id="@+id/textView43"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>