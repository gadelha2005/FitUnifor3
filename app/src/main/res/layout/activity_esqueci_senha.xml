<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logo_unifor"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="300dp"
        android:layout_height="380dp"
        android:layout_marginTop="40dp"
        app:cardBackgroundColor="#E9F7FF"
        app:cardCornerRadius="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="250dp"
                android:layout_height="61dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Informe o e-mail para o qual deseja redefinir sua senha."
                android:textAlignment="center"
                android:textColor="#0D0D0D"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/text2_email"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="50dp"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColor="#474747"
                android:textColorHint="#474747"
                android:textSize="15sp" />

            <Button
                android:id="@+id/button_enviar_para_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="60dp"
                android:backgroundTint="#007BFF"
                android:text="Enviar para o Email"
                android:textColor="#F6F6F6" />

            <Button
                android:id="@+id/button_voltar_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="Voltar ao Login"
                android:textColor="#1F1F1F" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>