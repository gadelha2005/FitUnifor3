<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:layout_gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="390dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="#E9F7FF"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imagem_aula_admin"
                android:layout_width="175dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/text_nome_aula"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-black"
                android:text="Yoga"
                android:textColor="#007BFF"
                android:textSize="16sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:cardBackgroundColor="#2F2F2F" />

            <TextView
                android:id="@+id/text_professor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-black"
                android:text="Prof João"
                android:textColor="#6C757D"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_dia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Dia : Segunda"
                android:layout_marginTop="5dp"
                android:textColor="#6C757D"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_horario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Horário: 19:00"
                android:layout_marginTop="5dp"
                android:textColor="#6C757D"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-medium"
                android:text="Capacidade"
                android:textColor="#6C757D"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_capacidade"
                android:layout_width="86dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="20 alunos"
                android:textColor="#6C757D"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-medium"
                android:text="Integrantes"
                android:textColor="#6C757D"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_integrantes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0 alunos"
                android:textColor="#6C757D"
                android:textSize="16sp" />

            <Button
                android:id="@+id/button_editar_aula"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:backgroundTint="#007BFF"
                android:text="Participar" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>