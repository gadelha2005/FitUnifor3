<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="0dp">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:cardBackgroundColor="#007BFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#F6F6F6"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_nome_aluno"
                    android:layout_width="wrap_content"
                    android:layout_height="5dp"
                    android:layout_marginTop="40dp"
                    android:layout_weight="1"
                    android:text="Olá, Nome"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/text_academia_unifor"
                    android:layout_width="wrap_content"
                    android:layout_height="5dp"
                    android:layout_weight="1"
                    android:text="Academia Unifor"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="330dp"
            android:layout_height="275dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:clickable="false"
            app:cardBackgroundColor="#E9F7FF"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_nome_proximo_treino"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_marginStart="140dp"
                    android:layout_marginTop="22dp"
                    android:text="Treino B: Costas + Bíceps"
                    android:textColor="#6C757D"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="115dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="140dp"
                    android:layout_marginTop="15dp"
                    app:cardBackgroundColor="#FFFAFA"
                    app:cardCornerRadius="50dp">

                    <TextView
                        android:id="@+id/text_numero_exercicios_proximo_treino"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="5 exercícios"
                        android:textColor="#6C757D"
                        android:textSize="16sp" />


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="115dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="140dp"
                    android:layout_marginTop="15dp"
                    app:cardBackgroundColor="#FFFAFA"
                    app:cardCornerRadius="50dp">

                    <TextView
                        android:id="@+id/text_dia_proximo_treino"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Segunda"
                        android:textColor="#6C757D"
                        android:textSize="16sp" />

                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/button_iniciar_treino1"
                    android:layout_width="180dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:backgroundTint="#007BFF"
                    android:text="Iniciar Treino"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="153dp"
                    android:layout_height="38dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Próximo Treino"
                    android:textColor="#007BFF"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/image_proximo_treino"
                    android:layout_width="108dp"
                    android:layout_height="108dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="40dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="4000dp"
            android:layout_height="200dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_treinos_completos"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="50dp"
                app:cardBackgroundColor="#E9F7FF"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_treinos_completos"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif-black"
                        android:text="17"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="#020202"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:text="Treinos Completos"
                        android:textAlignment="center"
                        android:textColor="#6C757D"
                        android:textSize="14sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="50dp"
                app:cardBackgroundColor="#E9F7FF"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_nivel_aluno"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        app:srcCompat="@drawable/icon_nivel_aluno"
                        tools:srcCompat="@drawable/icon_nivel_aluno" />

                    <TextView
                        android:id="@+id/text_nivel_aluno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="Iniciante"
                        android:textColor="#6C757D"
                        android:textSize="16sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="50dp"
                app:cardBackgroundColor="#E9F7FF"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_tempo_total_treino"
                        android:layout_width="90dp"
                        android:layout_height="39dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif-black"
                        android:text="23h45min"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginTop="0dp"
                        android:text="Tempo Total"
                        android:textColor="#6C757D"
                        android:textSize="14sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="sans-serif-black"
            android:text="Acesso Rápido"
            android:textColor="#007BFF"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:clickable="false"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_meus_treinos"
                android:layout_width="160dp"
                android:layout_height="90dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="30dp"
                android:clickable="true"
                app:cardBackgroundColor="#E9F7FF"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="false"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:clickable="false"
                        app:srcCompat="@drawable/icon_lista_treino"
                        tools:srcCompat="@drawable/icon_lista_treino" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="53dp"
                        android:layout_height="50dp"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:clickable="false"
                        android:text="Meus Treinos"
                        android:textColor="#6C757D"
                        android:textSize="16sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_ia"
                android:layout_width="160dp"
                android:layout_height="90dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="30dp"
                android:clickable="true"
                app:cardBackgroundColor="#E9F7FF"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="83dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/icon_ia"
                        tools:srcCompat="@drawable/icon_ia" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="87dp"
                        android:layout_height="50dp"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:text="IA"
                        android:textColor="#6C757D"
                        android:textSize="16sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_calendario"
            android:layout_width="350dp"
            android:layout_height="120dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            app:cardBackgroundColor="#E9F7FF"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="16dp"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- Mês e ano -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="8dp"
                    android:text="Março 2025"
                    android:textColor="#007BFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- Dias da semana -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Dom"
                        android:textColor="#6C757D" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Seg"
                        android:textColor="#6C757D" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Ter"
                        android:textColor="#6C757D" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Qua"
                        android:textColor="#6C757D" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Qui"
                        android:textColor="#6C757D" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Sex"
                        android:textColor="#6C757D" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Sab"
                        android:textColor="#6C757D" />
                </LinearLayout>

                <!-- Dias do mês -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="2"
                        android:textColor="#050505" />

                    <!-- Dia atual com destaque -->
                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_gravity="center"
                            android:background="@drawable/circle_background"
                            android:gravity="center"
                            android:text="3"
                            android:textColor="#F2F2F4" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="4"
                        android:textColor="#050505" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="5"
                        android:textColor="#050505" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="6"
                        android:textColor="#050505" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="7"
                        android:textColor="#050505" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="8"
                        android:textColor="#050505" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="149dp"
            android:layout_height="54dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="50dp"
            android:fontFamily="sans-serif-black"
            android:text="Aulas Coletivas de Hoje"
            android:textColor="#007BFF"
            android:textSize="20dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_aulas_diarias"
            android:layout_width="match_parent"
            android:layout_height= "0dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingStart="15dp"
            android:paddingEnd="60dp" />


    </LinearLayout>

</ScrollView>
