<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="350dp"
    android:layout_gravity="center"
    android:layout_marginTop="20dp"
    app:cardBackgroundColor="#E9F7FF"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="163dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/text_numero_exercicio"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/circle_background"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_nome_exercicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#6C757D"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_series"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="#6C757D"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text_repeticoes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#6C757D"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text_carga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#6C757D"
                android:textSize="18sp" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <VideoView
                android:id="@+id/video_exercicio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#007BFF" />

            <ImageView
                android:id="@+id/button_play_video"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:contentDescription="Play Video"
                android:focusable="true"
                android:src="@drawable/icon_play_video" />
        </FrameLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>